<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header1" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onyx</item>
        <!--        <item name="android:fontFamily">@font/quicksand_regular</item>-->
    </style>

    <style name="description" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/onyx</item>
        <!--        <item name="android:fontFamily">@font/quicksand_regular</item>-->
    </style>

    <style name="price" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onyx</item>
        <!--        <item name="android:fontFamily">@font/quicksand_regular</item>-->
    </style>

    <style name="title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onyx</item>
        <!--        <item name="android:fontFamily">@font/quicksand_regular</item>-->
    </style>


    <style name="subtitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/subtitle</item>
        <!--        <item name="android:fontFamily">@font/quicksand_regular</item>-->
    </style>

    <style name="button" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
<!--        <item name="android:fontFamily">@font/quicksand_regular</item>-->
        <item name="backgroundTint">@color/pastel_pink</item>
        <item name="android:background">@drawable/shape_button </item>
    </style>

<!--    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">-->
<!--        <item name="android:textSize">12sp</item>-->
<!--    </style>-->

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="customRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
       <item name="android:transformPivotX">0dp</item>
       <item name="android:transformPivotY">0dp</item>
        <item name="android:progressTint">@color/star</item>
        <item name="android:secondaryProgressTint">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:statusBarColor">@color/white</item>
    </style>


</resources>