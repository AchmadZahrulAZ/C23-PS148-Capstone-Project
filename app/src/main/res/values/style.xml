<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header1" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onyx</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="detailTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/onyx</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <style name="price" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onyx</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onyx</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="description" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/onyx</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="subtitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/subtitle</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="actionText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onyx</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <style name="button" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="backgroundTint">@color/pastel_pink</item>
        <item name="android:background">@drawable/shape_button </item>
    </style>

    <style name="buttonSmall" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="backgroundTint">@color/pastel_pink</item>
        <item name="android:background">@drawable/shape_button </item>
    </style>

<!--    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">-->
<!--        <item name="android:textSize">12sp</item>-->
<!--    </style>-->

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="dividerLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="customRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
       <item name="android:transformPivotX">0dp</item>
       <item name="android:transformPivotY">0dp</item>
        <item name="android:progressTint">@color/star</item>
        <item name="android:secondaryProgressTint">@android:color/transparent</item>
    </style>

</resources>